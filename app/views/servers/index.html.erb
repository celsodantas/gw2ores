<h2>Choose your server</h2>


	<% @servers.each.with_index do |e, index| %>
		<h4 class="title">
			<%= e.location  %>
		</h4>
		<div class="">
			
			<% @by_location[index].each do |server| %>
				<div class="server span3">
					<%= link_to server.name, server_path(server) %> 
					<small class="muted">
						(<span class="ore_count"><%= server.ore_nodes_count %></span>)
					</small>
				</div>
			<% end -%>
		</div>
	<% end %>
