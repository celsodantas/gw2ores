<h2>Please, log-in. =]</h2>

 <p class="lead">
 	Only authorized people are allowed to reset the maps.
 </p>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in", :class => "btn btn-primary" %></div>
<% end %>
